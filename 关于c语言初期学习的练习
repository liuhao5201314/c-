//分数求和
//1/1-1/2+1/3-1/4......+1/99-1/100
#include<stdio.h>
int main()
{
	int i = 0;
	int j = 0;
	double sum = 0.0;
	for (i = 1; i <= 100; i++)
	{
		if (i % 2 == 0)
		{
			j = -i;
		}
		else
		{
			j = i;
		}
		sum = sum + 1.0 / j;
	}
	printf("%lf", sum);
}
