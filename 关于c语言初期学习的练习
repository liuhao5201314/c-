//试切法优化运用开平方或者除二减少循环次数       
/*
#include<stdio.h>
#include<math.h>
int main()
{
	int i = 0;
	int k = 0;
	int j = 0;
	printf("请输入一个数字进行判断是不是素数");
	scanf_s("%d", &j);
	k = (int)sqrt(j);
	for (i = 2; i < k; i++)
	{
		if (j%i == 0)
		{
			printf("这不是素数");
			break;
		}
		else
		{
			printf("这是素数");
			break;
		}
	}
}
