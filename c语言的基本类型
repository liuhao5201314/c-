int main()
{
	int num1 = 0;
	int num2 = 0;
	int num=0;
	printf("请输入2个数字");
	scanf("%d,%d",&num1, &num2);
	num = num1 + num2;
	printf("%d", num);
	return 0;
}
//局部变量的作用域为局部的大括号（包含大括号内的括号）
